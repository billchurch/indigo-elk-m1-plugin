<?xml version="1.0"?>
<Devices>
	<Device type="custom" id="sensor">
		<Name>Rocker</Name>
		<ConfigUI>
			<Field id="autoLabel" type="label">
				<Label>Put in device address and click the button.</Label>
			</Field>
			<Field id="exampleButton" type="button" >
				<Label>Click me for log</Label>
				<Title>OK</Title>
				<CallbackMethod>clickedOK</CallbackMethod>
			</Field>
			<Field id="simpleSeparator1" type="separator"/>
			<Field id="manualNodeID" type="textfield">
				<Label>Enter Node ID:</Label>
			</Field>
		</ConfigUI>
		<States>
			<State id="brightness">
				<ValueType>Number</ValueType>
				<TriggerLabel>Brightness Level</TriggerLabel>
				<ControlPageLabel>Brightness Level</ControlPageLabel>
			</State>
			<State id="onState">
				<ValueType boolType="onOff">Boolean</ValueType>
				<TriggerLabel>On State</TriggerLabel>
				<ControlPageLabel>On State</ControlPageLabel>
			</State>
		</States>
		<UiDisplayStateId>onState</UiDisplayStateId>
	</Device>
</Devices>